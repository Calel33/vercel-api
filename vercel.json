{
  "version": 2,
  "name": "hustleplug-pro-validation",
  "functions": {
    "api/validate-key.js": {
      "maxDuration": 10
    },
    "api/schedules/*.js": {
      "maxDuration": 15
    },
    "api/cron/execute-schedules.js": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/cron/execute-schedules",
      "schedule": "*/15 * * * *"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ]
} 